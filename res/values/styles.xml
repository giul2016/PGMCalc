<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="regularbuttonsrow">
	    <item name="android:layout_height">0dp</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_weight">1</item>
    </style>
    
    <style name="managerbutton">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">0dip</item> 
	    <item name="android:layout_weight">1</item>
	    <item name="android:background">@drawable/managerbuttonbackground</item>
	    <item name="android:textSize">15sp</item>
  	</style>
        
    <style name="regularimagebutton">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:background">@drawable/mybackground</item>
	</style>
    
    <style name="regularbutton" parent="regularimagebutton">
	    <item name="android:typeface">monospace</item>
	    <item name="android:textSize">30sp</item>
	</style>
	
	<style name="fullwrap">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="notificationarea" parent="fullwrap">
	    <item name="android:textSize">14sp</item>
	    <item name="android:paddingLeft">2dp</item>
	    <item name="android:paddingRight">2dp</item>
	</style>
	
	<style name="dialogitem">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:textColor">@color/touchabletext</item>
	    <item name="android:textSize">30sp</item>
	    <item name="android:background">@drawable/dialogbackground</item>
	    <item name="android:singleLine">true</item>	    
	</style>
	
	<style name="tutorial_text">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">fill</item>
	    <item name="android:layout_marginLeft">3dp</item>
	    <item name="android:layout_marginRight">3dp</item>
	</style>
	
</resources>